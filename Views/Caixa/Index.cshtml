@using EllosPratas.Dto
@using System.Globalization
@{
    ViewData["Title"] = "Abertura de Caixa";
}
@* 
@{
    ViewData["Title"] = "Controle de Caixa";
} *@

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3"><i class="bi bi-cash-coin me-2"></i>Controle de Caixa</h1>
        <div id="status-caixa-info">
            <span class="badge bg-secondary fs-6">
                <i class="bi bi-hourglass-split me-1"></i>Carregando...
            </span>
        </div>
    </div>

    <!-- Card de Status do Caixa -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm" id="card-status-caixa">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Status do Caixa</h5>
                </div>
                <div class="card-body">
                    <!-- Quando caixa está fechado -->
                    <div id="caixa-fechado-section">
                        <div class="alert alert-warning d-flex align-items-center mb-3" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                            <div>
                                <strong>Caixa Fechado</strong> - Abra o caixa para iniciar as operações do dia.
                            </div>
                        </div>
                        <button class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#modalAbrirCaixa">
                            <i class="bi bi-box-arrow-right me-2"></i>Abrir Caixa
                        </button>
                    </div>

                    <!-- Quando caixa está aberto -->
                    <div id="caixa-aberto-section" style="display: none;">
                        <div class="alert alert-success d-flex align-items-center mb-3" role="alert">
                            <i class="bi bi-check-circle-fill me-2 fs-4"></i>
                            <div>
                                <strong>Caixa Aberto</strong> - Operações em andamento.
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <div class="card border-info">
                                    <div class="card-body text-center">
                                        <p class="text-muted mb-1 small">Funcionário</p>
                                        <p class="fw-bold mb-0" id="caixa-funcionario">-</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="card border-info">
                                    <div class="card-body text-center">
                                        <p class="text-muted mb-1 small">Data de Abertura</p>
                                        <p class="fw-bold mb-0" id="caixa-data-abertura">-</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="card border-success">
                                    <div class="card-body text-center">
                                        <p class="text-muted mb-1 small">Valor Inicial</p>
                                        <p class="fw-bold text-success mb-0" id="caixa-valor-inicial">R$ 0,00</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="card border-primary">
                                    <div class="card-body text-center">
                                        <p class="text-muted mb-1 small">ID do Caixa</p>
                                        <p class="fw-bold text-primary mb-0" id="caixa-id">-</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-3">
                            <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalSangria">
                                <i class="bi bi-arrow-down-circle me-1"></i>Registrar Sangria
                            </button>
                            <button class="btn btn-info" id="btn-visualizar-relatorio">
                                <i class="bi bi-file-earmark-text me-1"></i>Relatório do Caixa
                            </button>
                            <button class="btn btn-danger ms-auto" data-bs-toggle="modal" data-bs-target="#modalFecharCaixa">
                                <i class="bi bi-box-arrow-left me-1"></i>Fechar Caixa
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Relatório do Caixa (inicialmente oculto) -->
    <div class="row" id="relatorio-section" style="display: none;">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-bar-graph me-2"></i>Relatório do Caixa</h5>
                    <button class="btn btn-sm btn-light" id="btn-fechar-relatorio">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <div class="card-body">
                    <!-- Resumo Financeiro -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <small class="text-muted">Valor Inicial</small>
                                    <h5 class="mb-0" id="rel-valor-inicial">R$ 0,00</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success bg-opacity-10">
                                <div class="card-body text-center">
                                    <small class="text-muted">Total Entradas</small>
                                    <h5 class="text-success mb-0" id="rel-total-entradas">R$ 0,00</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger bg-opacity-10">
                                <div class="card-body text-center">
                                    <small class="text-muted">Total Saídas</small>
                                    <h5 class="text-danger mb-0" id="rel-total-saidas">R$ 0,00</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-primary bg-opacity-10">
                                <div class="card-body text-center">
                                    <small class="text-muted">Saldo Final</small>
                                    <h4 class="text-primary mb-0 fw-bold" id="rel-saldo-final">R$ 0,00</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Movimentações -->
                    <h6 class="mb-3"><i class="bi bi-list-ul me-2"></i>Movimentações</h6>
                    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                        <table class="table table-hover table-sm">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>Tipo</th>
                                    <th>Descrição</th>
                                    <th class="text-end">Valor</th>
                                    <th>Data/Hora</th>
                                </tr>
                            </thead>
                            <tbody id="tabela-movimentacoes">
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Nenhuma movimentação registrada</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Vendas -->
                    <h6 class="mb-3 mt-4"><i class="bi bi-cart-check me-2"></i>Vendas Realizadas</h6>
                    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                        <table class="table table-hover table-sm">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>ID</th>
                                    <th>Data/Hora</th>
                                    <th>Forma de Pagamento</th>
                                    <th class="text-end">Valor Total</th>
                                </tr>
                            </thead>
                            <tbody id="tabela-vendas">
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Nenhuma venda registrada</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-end mt-3">
                        <button class="btn btn-outline-primary" onclick="window.print()">
                            <i class="bi bi-printer me-1"></i>Imprimir Relatório
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Abrir Caixa -->
<div class="modal fade" id="modalAbrirCaixa" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-box-arrow-right me-2"></i>Abrir Caixa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="form-abrir-caixa">
                    <div class="mb-3">
                        <label for="select-loja-abertura" class="form-label">Loja <span class="text-danger">*</span></label>
                        <select id="select-loja-abertura" class="form-select" required>
                            <option value="" selected disabled>Selecione uma loja...</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="select-funcionario-abertura" class="form-label">Funcionário <span class="text-danger">*</span></label>
                        <select id="select-funcionario-abertura" class="form-select" required>
                            <option value="" selected disabled>Selecione um funcionário...</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="input-valor-inicial" class="form-label">Valor Inicial (Troco)</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input type="number" id="input-valor-inicial" class="form-control" value="0" min="0" step="0.01">
                        </div>
                        <small class="text-muted">Valor em dinheiro disponível no caixa para troco</small>
                    </div>
                    <div class="mb-3">
                        <label for="textarea-obs-abertura" class="form-label">Observações</label>
                        <textarea id="textarea-obs-abertura" class="form-control" rows="3" placeholder="Observações sobre a abertura do caixa (opcional)"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" id="btn-confirmar-abertura">
                    <i class="bi bi-check-circle me-1"></i>Abrir Caixa
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Fechar Caixa -->
<div class="modal fade" id="modalFecharCaixa" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-box-arrow-left me-2"></i>Fechar Caixa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Atenção!</strong> Ao fechar o caixa, não será possível registrar novas vendas até que um novo caixa seja aberto.
                </div>
                <form id="form-fechar-caixa">
                    <div class="mb-3">
                        <label for="input-valor-fechamento" class="form-label">Valor em Caixa <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input type="number" id="input-valor-fechamento" class="form-control" required min="0" step="0.01" placeholder="0.00">
                        </div>
                        <small class="text-muted">Valor físico contado no caixa</small>
                    </div>
                    <div class="mb-3">
                        <label for="textarea-obs-fechamento" class="form-label">Observações de Fechamento</label>
                        <textarea id="textarea-obs-fechamento" class="form-control" rows="3" placeholder="Observações sobre o fechamento (opcional)"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="btn-confirmar-fechamento">
                    <i class="bi bi-check-circle me-1"></i>Confirmar Fechamento
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Registrar Sangria -->
<div class="modal fade" id="modalSangria" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title"><i class="bi bi-arrow-down-circle me-2"></i>Registrar Sangria</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    A sangria remove dinheiro do caixa para segurança ou outros fins.
                </div>
                <form id="form-sangria">
                    <div class="mb-3">
                        <label for="input-valor-sangria" class="form-label">Valor da Sangria <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input type="number" id="input-valor-sangria" class="form-control" required min="0.01" step="0.01" placeholder="0.00">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="input-descricao-sangria" class="form-label">Descrição <span class="text-danger">*</span></label>
                        <input type="text" id="input-descricao-sangria" class="form-control" required placeholder="Ex: Retirada para cofre, pagamento de fornecedor...">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-warning" id="btn-confirmar-sangria">
                    <i class="bi bi-check-circle me-1"></i>Registrar Sangria
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            let caixaAberto = false;
            let idCaixaAtual = null;
            let idLojaAtual = null;

            // ===== FUNÇÕES AUXILIARES =====
            function formatCurrency(value) {
                return value.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
            }

            function formatDateTime(dateString) {
                const date = new Date(dateString);
                return date.toLocaleString('pt-BR', {
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
            }

            function atualizarStatusCaixa(status) {
                if (status.caixaAberto) {
                    caixaAberto = true;
                    idCaixaAtual = status.id_caixa;
                    idLojaAtual = status.id_loja || idLojaAtual;

                    $('#status-caixa-info').html(`
                        <span class="badge bg-success fs-6">
                            <i class="bi bi-check-circle me-1"></i>Caixa Aberto
                        </span>
                    `);

                    $('#caixa-fechado-section').hide();
                    $('#caixa-aberto-section').show();
                    $('#caixa-funcionario').text(status.nomeFuncionario || 'N/A');
                    $('#caixa-data-abertura').text(formatDateTime(status.dataAbertura));
                    $('#caixa-valor-inicial').text(formatCurrency(status.valorInicial || 0));
                    $('#caixa-id').text(status.id_caixa);
                } else {
                    caixaAberto = false;
                    idCaixaAtual = null;

                    $('#status-caixa-info').html(`
                        <span class="badge bg-danger fs-6">
                            <i class="bi bi-x-circle me-1"></i>Caixa Fechado
                        </span>
                    `);

                    $('#caixa-fechado-section').show();
                    $('#caixa-aberto-section').hide();
                    $('#relatorio-section').hide();
                }
            }

            // ===== CARREGAR LOJAS E FUNCIONÁRIOS =====
            async function carregarLojas() {
                try {
                    const response = await fetch('/Loja/ListarLojasSimplificadas');
                    const lojas = await response.json();
                    const select = $('#select-loja-abertura');
                    select.empty().append('<option value="" selected disabled>Selecione uma loja...</option>');
                    lojas.forEach(loja => {
                        select.append(new Option(loja.nome_loja, loja.id_loja));
                    });
                } catch (error) {
                    console.error('Erro ao carregar lojas:', error);
                }
            }

            async function carregarFuncionarios() {
                try {
                    const response = await fetch('/Funcionario/ListarFuncionariosSimplificados');
                    const funcionarios = await response.json();
                    const select = $('#select-funcionario-abertura');
                    select.empty().append('<option value="" selected disabled>Selecione um funcionário...</option>');
                    funcionarios.forEach(func => {
                        select.append(new Option(func.nome_funcionario, func.id_funcionario));
                    });
                } catch (error) {
                    console.error('Erro ao carregar funcionários:', error);
                }
            }

            // ===== VERIFICAR STATUS DO CAIXA =====
            async function verificarStatusCaixa(idLoja) {
                try {
                    const response = await fetch(`@Url.Action("VerificarCaixaAberto", "Caixa")?idLoja=${idLoja}`);
                    const status = await response.json();
                    atualizarStatusCaixa(status);
                } catch (error) {
                    console.error('Erro ao verificar status do caixa:', error);
                }
            }

            // ===== ABRIR CAIXA =====
            $('#btn-confirmar-abertura').on('click', async function() {
                const dto = {
                    id_loja: parseInt($('#select-loja-abertura').val()),
                    id_funcionario: parseInt($('#select-funcionario-abertura').val()),
                    valor_inicial: parseFloat($('#input-valor-inicial').val()) || 0,
                    observacao: $('#textarea-obs-abertura').val()
                };

                if (!dto.id_loja || !dto.id_funcionario) {
                    alert('Por favor, preencha todos os campos obrigatórios.');
                    return;
                }

                try {
                    const response = await fetch('@Url.Action("AbrirCaixa", "Caixa")', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(dto)
                    });

                    const result = await response.json();

                    if (result.success) {
                        alert(result.message);
                        idLojaAtual = dto.id_loja;
                        await verificarStatusCaixa(dto.id_loja);
                        bootstrap.Modal.getInstance($('#modalAbrirCaixa')).hide();
                        $('#form-abrir-caixa')[0].reset();
                    } else {
                        alert(result.message || 'Erro ao abrir caixa.');
                    }
                } catch (error) {
                    console.error('Erro ao abrir caixa:', error);
                    alert('Erro ao abrir caixa. Verifique o console para mais detalhes.');
                }
            });

            // ===== FECHAR CAIXA =====
            $('#btn-confirmar-fechamento').on('click', async function() {
                const dto = {
                    id_caixa: idCaixaAtual,
                    valor_fechamento: parseFloat($('#input-valor-fechamento').val()),
                    observacao_fechamento: $('#textarea-obs-fechamento').val()
                };

                if (!dto.valor_fechamento || dto.valor_fechamento < 0) {
                    alert('Por favor, informe o valor de fechamento.');
                    return;
                }

                if (!confirm('Tem certeza que deseja fechar o caixa? Esta ação não poderá ser desfeita.')) {
                    return;
                }

                try {
                    const response = await fetch('@Url.Action("FecharCaixa", "Caixa")', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(dto)
                    });

                    const result = await response.json();

                    if (result.success) {
                        alert(result.message);
                        await verificarStatusCaixa(idLojaAtual);
                        bootstrap.Modal.getInstance($('#modalFecharCaixa')).hide();
                        $('#form-fechar-caixa')[0].reset();
                    } else {
                        alert(result.message || 'Erro ao fechar caixa.');
                    }
                } catch (error) {
                    console.error('Erro ao fechar caixa:', error);
                    alert('Erro ao fechar caixa. Verifique o console para mais detalhes.');
                }
            });

            // ===== REGISTRAR SANGRIA =====
            $('#btn-confirmar-sangria').on('click', async function() {
                const dto = {
                    id_caixa: idCaixaAtual,
                    valor: parseFloat($('#input-valor-sangria').val()),
                    descricao: $('#input-descricao-sangria').val()
                };

                if (!dto.valor || dto.valor <= 0 || !dto.descricao) {
                    alert('Por favor, preencha todos os campos obrigatórios.');
                    return;
                }

                try {
                    const response = await fetch('@Url.Action("RegistrarSangria", "Caixa")', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(dto)
                    });

                    const result = await response.json();

                    if (result.success) {
                        alert(result.message);
                        bootstrap.Modal.getInstance($('#modalSangria')).hide();
                        $('#form-sangria')[0].reset();
                    } else {
                        alert(result.message || 'Erro ao registrar sangria.');
                    }
                } catch (error) {
                    console.error('Erro ao registrar sangria:', error);
                    alert('Erro ao registrar sangria. Verifique o console para mais detalhes.');
                }
            });

            // ===== VISUALIZAR RELATÓRIO =====
            $('#btn-visualizar-relatorio').on('click', async function() {
                if (!idCaixaAtual) {
                    alert('Nenhum caixa aberto para gerar relatório.');
                    return;
                }

                try {
                    const response = await fetch(`@Url.Action("RelatorioDiario", "Caixa")?idCaixa=${idCaixaAtual}`);
                    const relatorio = await response.json();

                    // Atualizar resumo financeiro
                    $('#rel-valor-inicial').text(formatCurrency(relatorio.valorInicial));
                    $('#rel-total-entradas').text(formatCurrency(relatorio.totalEntradas));
                    $('#rel-total-saidas').text(formatCurrency(relatorio.totalSaidas));
                    $('#rel-saldo-final').text(formatCurrency(relatorio.saldoFinal));

                    // Atualizar movimentações
                    const tbodyMovimentacoes = $('#tabela-movimentacoes');
                    tbodyMovimentacoes.empty();

                    if (relatorio.movimentacoes && relatorio.movimentacoes.length > 0) {
                        relatorio.movimentacoes.forEach(mov => {
                            const badge = mov.tipo === 'Entrada' ? 'bg-success' : 'bg-danger';
                            tbodyMovimentacoes.append(`
                                <tr>
                                    <td><span class="badge ${badge}">${mov.tipo}</span></td>
                                    <td>${mov.descricao}</td>
                                    <td class="text-end fw-bold">${formatCurrency(mov.valor)}</td>
                                    <td>${formatDateTime(mov.dataMovimento)}</td>
                                </tr>
                            `);
                        });
                    } else {
                        tbodyMovimentacoes.append('<tr><td colspan="4" class="text-center text-muted">Nenhuma movimentação registrada</td></tr>');
                    }

                    // Atualizar vendas
                    const tbodyVendas = $('#tabela-vendas');
                    tbodyVendas.empty();

                    if (relatorio.vendas && relatorio.vendas.length > 0) {
                        relatorio.vendas.forEach(venda => {
                            tbodyVendas.append(`
                                <tr>
                                    <td>#${venda.id_venda}</td>
                                    <td>${formatDateTime(venda.data_venda)}</td>
                                    <td>${venda.formaPagamento}</td>
                                    <td class="text-end fw-bold">${formatCurrency(venda.valor_total)}</td>
                                </tr>
                            `);
                        });
                    } else {
                        tbodyVendas.append('<tr><td colspan="4" class="text-center text-muted">Nenhuma venda registrada</td></tr>');
                    }

                    $('#relatorio-section').slideDown();
                    $('html, body').animate({
                        scrollTop: $('#relatorio-section').offset().top - 100
                    }, 500);

                } catch (error) {
                    console.error('Erro ao carregar relatório:', error);
